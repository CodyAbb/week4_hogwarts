<form  action="/students" method="POST">
  <label for="first-name">First Name: </label>
  <input type="text" name="first_name" value="<%=@student.first_name.capitalize%>" id="first-name">

  <label for="last-name">Last Name: </label>
  <input type="text" name="last_name" value="<%=@student.last_name.capitalize%>" id="last-name">

  <label for="house_select">Select House:</label>
  <select name="house_id" min="4" id="house_select">
    <% for house in @houses %>
      <option value="<%= house.id %>" <%= "selected" if @student.house_id == house.id%>> <%= house.name %> </option>
    <% end %>
  </select>

  <label for="age">Age: </label>
  <input type="number" name="age" value="<%=@student.age%>" id="age">

  <input type="submit" value="Update">
</form>
